<views:WindowBase x:Class="CatsTaskProject.Views.BreedInfoWindow"
      xmlns:reactiveui="https://www.reactiveui.net/"
      xmlns:viewModels="clr-namespace:CatsTaskProject.ViewModels"
      xmlns:views="clr-namespace:CatsTaskProject.Views"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CatsTaskProject.Views"
      mc:Ignorable="d" 
      MinHeight="580" MinWidth="400"
      Height="580" Width="400"
      Title="Breed info">


    <Window.DataContext>
        <viewModels:BreedInfoViewModel/>
    </Window.DataContext>

    <Window.Resources>
    </Window.Resources>

    <Grid Margin="10 0 10 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Grid.Column="0" Style="{DynamicResource TransparentButton}" FontWeight="Bold" Margin="0 5 10 5" Click="backButton_Click">
                <Image Source="/Resources/LeftArrow.png"/>
            </Button>
            <TextBlock Grid.Column="1" x:Name="nameTextBlock"
                   HorizontalAlignment="Left" VerticalAlignment="Center"
                   FontWeight="Bold" FontSize="15">Text</TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="83"/>
                <RowDefinition MinHeight="25"/>
                <RowDefinition MinHeight="25"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
                <RowDefinition Height="22*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="descriptionTextBlock" 
                       FontSize="15" Text="Empty description" TextWrapping="Wrap"/>
            <TextBlock Grid.Row="1" x:Name="originTextBlock" Text="Origin: empty" Margin="0 5 0 0"/>
            <TextBlock Grid.Row="2" x:Name="lifeSpanTextBlock" Text="Life span: empty"/>
        </Grid>

        <Grid Grid.Row="2">
        </Grid>

        <Button Grid.Row="3" MinWidth="300" Margin="10 5 10 10" 
                Command="{Binding OpenWikipediaCommand}" CommandParameter="{Binding ElementName=wikipediaHyperLink, Path=NavigateUri}">
            
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>

                <Style TargetType="Button">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Background" Value="#8c00ff"/>
                    <Setter Property="BorderBrush" Value="#7702d6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="0.85"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Hyperlink">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="TextDecorations" Value="None"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="DemiBold"/>
                </Style>
            </Button.Resources>

            <Hyperlink x:Name="wikipediaHyperLink">Wikipedia</Hyperlink>
        </Button>
    </Grid>
</views:WindowBase>
