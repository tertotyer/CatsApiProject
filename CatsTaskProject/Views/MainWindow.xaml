<views:WindowBase x:Class="CatsTaskProject.Views.MainWindow"
        xmlns:reactiveui="https://www.reactiveui.net/"
        xmlns:viewModels="clr-namespace:CatsTaskProject.ViewModels"
        xmlns:converters="clr-namespace:CatsTaskProject.Converters"
        xmlns:userControls="clr-namespace:CatsTaskProject.UserControls"
        xmlns:views="clr-namespace:CatsTaskProject.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatsTaskProject"
        mc:Ignorable="d"
        MinHeight="550" MinWidth="400"
        Title="MainWindow" Height="550" Width="400">

    <Window.Resources>
        <Style TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0 0 0 5"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <userControls:SearchTextBox x:Name="searchTextBox" Grid.Column="0" Placeholder="Search breed" 
                                        KeyUp="searchTextBox_KeyUp" SearchCommand="{Binding SearchBreedsByNameApiCommand}" />
            <ComboBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Width="140" MinWidth="140"/>
        </Grid>

        <ListBox Margin="10, 0, 10, 15" HorizontalContentAlignment="Center" Grid.Row="1"
                 ItemsSource="{Binding FilteredBreeds}" BorderBrush="Transparent"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Background="Transparent" Width="320" Height="90" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20*"/>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="10*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" HorizontalAlignment="Left" Height="65" Width="60"
                               Source="{Binding MainImage.LocalImagePath}"/>
                        <StackPanel Grid.Column="1">
                            <Label Content="{Binding Name}" Margin="0" FontWeight="DemiBold" Padding="0 0 0 5"/>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <Label Grid.Column="2" Content="X" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>

    </Grid>

</views:WindowBase>
